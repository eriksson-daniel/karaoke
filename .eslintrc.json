{
  "extends": "next/core-web-vitals",
  "rules": {
    "no-unused-vars": "warn",
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-undef": "warn",
    "no-unused-expressions": "warn",
    "import/order": [
      "warn",
      {
        "pathGroups": [
          {
            "pattern": "server/**",
            "group": "external",
            "position": "after"
          }
        ],
        "groups": ["builtin", "external", "internal", "unknown", "parent", "sibling", "index", "object", "type"],
        "newlines-between": "always"
      }
    ]
  }
}
